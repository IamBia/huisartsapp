<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.huisartsenapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>Huisartsen app</name>
    <description>
        Huisartsen app
  </description>
    <author email="bia.paulaa@gmail.com" href="https://biadev.co">
    Bianca de Paula
  </author>
    <access origin="http://code.jquery.com" subdomains="true" />
    <content src="index.html" />
    <splash src="splash.png" />
    <icon src="splash.png" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
</widget>
